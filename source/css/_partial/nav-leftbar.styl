border-radius() {
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
}
  
nav-item-style() {
  width: 100px;
  height: 100px;
  border-radius: 50px;
  font-size: 20px;
  margin: 10px 0;
}

#nav-leftbar {
  
  .nav-table {
    height: 100%;
  
    .nav-home {
      height: 100px;
    }
  
    .nav-btn {
      nav-item-style();
      float: right;
    }
    
    .nav-list {
      .nav-item {
        .tag-list {
          text-align: right;
          clear: both;
        }
        
        .archive-list {
          text-align: right;
          clear: both;
        }
      }
    }
  
  }
}